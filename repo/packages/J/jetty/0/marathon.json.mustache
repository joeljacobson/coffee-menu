{
  "id": "{{jetty.name}}",
  "cpus": {{jetty.cpus}},
  "mem": {{jetty.mem}},
  "instances": {{jetty.instances}},
  "args": [],
  "healthChecks": [
  ],
  "labels": {
		"DCOS_SERVICE_SCHEME":"http",
		"DCOS_SERVICE_NAME":"jetty",
		"DCOS_SERVICE_PORT_INDEX":"0",
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_VHOST": "jetty.coffeemenu.mesosphere.io"
	},
  "portDefinitions": [{
		"port": 8080,
		"protocol": "tcp",
		"name": "jetty",
		"labels": {
			"VIP_0": "/jetty:80"
		}
	}],
   "requirePorts": false,
	"container": {
    "type": "MESOS",
    "docker": {
      "image": "{{jetty.dockerimage}}",
 "privileged": false,
 "forcePullImage": true,
      "portMappings": null
    }
  },
"fetch": [
    {
      "uri": "{{jetty.war}}"
    }
  ],
  "healthChecks": [
     {
      "gracePeriodSeconds": {{jetty.graceperiod}},
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 3,
      "timeoutSeconds": 20,
      "delaySeconds": 15,
      "portIndex": 0,
      "protocol": "MESOS_HTTP",
      "path": "{{jetty.healthcheckpath}}"
    }
  ],
  "env": {
    "JAVA_OPTS": "{{jetty.java_opts}}"
  }
}
