{
  "id": "{{wildfly.name}}",
  "cpus": {{wildfly.cpus}},
  "mem": {{wildfly.mem}},
  "instances": {{wildfly.instances}},
  "args": [],
  "healthChecks": [
  ],
  "labels": {
		"DCOS_SERVICE_SCHEME":"http",
		"DCOS_SERVICE_NAME":"wildfly",
		"DCOS_SERVICE_PORT_INDEX":"0"
	},
  "portDefinitions": [{
		"port": 8080,
		"protocol": "tcp",
		"name": "wildfly",
		"labels": {
			"VIP_0": "/wildfly:80"
		}
	}],
   "requirePorts": false,
	"container": {
    "type": "MESOS",
    "docker": {
      "image": "{{wildfly.dockerimage}}",
      "privileged": false,
      "forcePullImage": true,
      "portMappings": null
    }
  },
"fetch": [
    {
      "uri": "{{wildfly.war}}"
    }
  ],
  "healthChecks": [
     {
      "gracePeriodSeconds": {{wildfly.graceperiod}},
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 3,
      "timeoutSeconds": 20,
      "delaySeconds": 15,
      "portIndex": 0,
      "protocol": "MESOS_HTTP",
      "path": "{{wildfly.healthcheckpath}}"
    }
  ],
  "env": {
    "JAVA_OPTS": "{{wildfly.java_opts}}"
  }
}
