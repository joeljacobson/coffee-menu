{
  "id": "{{tomcat.name}}",
  "cpus": {{tomcat.cpus}},
  "mem": {{tomcat.mem}},
  "instances": {{tomcat.instances}},
  "args": [],
  "healthChecks": [
  ],
  "labels": {
		"DCOS_SERVICE_SCHEME":"http",
		"DCOS_SERVICE_NAME":"tomcat",
		"DCOS_SERVICE_PORT_INDEX":"0",
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_VHOST": "tomcat.coffeemenu.mesosphere.io"
	},
  "portDefinitions": [{
		"port": 8080,
		"protocol": "tcp",
		"name": "tomcat",
		"labels": {
			"VIP_0": "/tomcat:80"
		}
	}],
   "requirePorts": false,
	"container": {
    "type": "MESOS",
    "docker": {
      "image": "{{tomcat.dockerimage}}",
 "privileged": false,
 "forcePullImage": true,
      "portMappings": null
    }
  },
"fetch": [
    {
      "uri": "{{tomcat.war}}"
    }
  ],
  "healthChecks": [
      {
      "gracePeriodSeconds": {{tomcat.graceperiod}},
      "intervalSeconds": 60,
      "maxConsecutiveFailures": 12,
      "timeoutSeconds": 20,
      "delaySeconds": 15,
      "portIndex": 0,
      "protocol": "MESOS_HTTP",
      "path": "{{tomcat.healthcheckpath}}"
    }
  ],
  "env": {
    "JAVA_OPTS": "{{tomcat.java_opts}}"
  }
}
